---
import cx from 'classnames';

import '../styles/global.css';

import Header from '../components/Header.astro';
import Sidebar from '../components/Sidebar.astro';
import { repositories } from '../config/repositories';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Learn Like Me (LLM) - Coming Soon" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body class="min-h-screen">
		<main class={cx("flex flex-col h-screen")}>
			<Header />

			<div class={cx(
				"flex flex-1", 
				"w-full",
			)}>
				<Sidebar repositories={repositories} />
				
				<div class={cx(
					"flex flex-col flex-1",
				)}>
					<div 
						id="inspiration-section"
						class={cx(
							"hidden", 
							"flex flex-col", 
							"p-8 bg-gray-50 border-b"
						)}
					>
						<h1 class="text-2xl font-bold text-gray-900 mb-1">
							Inspiration
						</h1>
						<p class="text-gray-700">
							<a 
								href="https://www.scotthyoung.com/blog/myprojects/mit-challenge-2/?utm_source=learnlikeme" 
								class="text-indigo-600 hover:text-indigo-800 underline"
								target="_blank"
							>
								The MIT Challenge
							</a>
							serves as an inspiring example of self-directed learning and educational innovation. It showcases the potential for motivated individuals to acquire high-level knowledge and skills through unconventional means, leveraging freely available educational resources.
						</p>
					</div>
					
					<slot />
				</div>
			</div>
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	.fade-in {
		animation: fadeIn 0.5s ease-in forwards;
		display: block !important;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}
</style>

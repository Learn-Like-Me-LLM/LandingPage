---
import cx from 'classnames';
---

<header class={cx(
  "flex",
  "justify-between",
  "z-50", 
  "px-3 py-1",
  "w-full",
  "h-16",
  "items-center"
)}>
      <span class="flex flex-col items-start">
        <span class="text-xl font-bold text-gray-900">
          Learn Like Me (LLM)
        </span>
        <span class="italic text-sm mt-1">ðŸš§ Under Construction ðŸš§</span>
      </span>
      
      <button
        id="inspiration-toggle"
        class="italic px-4 py-1 border-2 border-indigo-600 text-indigo-600 rounded-lg hover:bg-indigo-700 hover:text-white transition-colors flex items-center gap-2"
      >
        Inspiration
      </button>
</header>

<script>
  const button = document.getElementById('inspiration-toggle');
  const inspiration = document.getElementById('inspiration-section');
  
  button?.addEventListener('click', () => {
    inspiration?.classList.toggle('hidden');
    inspiration?.classList.toggle('fade-in');
    button?.classList.toggle('bg-indigo-600');
    button?.classList.toggle('text-white');
  });
</script> 
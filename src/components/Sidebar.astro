---
import cx from 'classnames';
import { repositories } from '../config/repositories';
import type { Repository } from '../config/repositories';

interface Props {
  repositories: {
    tools: Repository[];
    topics: Repository[];
    languages: Repository[];
  };
}

const { repositories } = Astro.props;
---

<div class={cx(
    "flex flex-col", 
    "w-[300px]",
    "p-4", 
    "overflow-y-auto", 
    "bg-white",
)}>
  <nav class="flex flex-1 flex-col">
    <ul role="list" class="flex flex-1 flex-col gap-y-7">
      <li>
        <ul role="list" class="-mx-2 space-y-1">
          <li>
            <details class="group">
              <summary class="flex w-full items-center gap-x-3 rounded-md p-2 text-left text-sm/6 font-semibold text-gray-700 hover:bg-gray-50 cursor-pointer">
                <svg xmlns="http://www.w3.org/2000/svg" class="size-6 shrink-0 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
                Topics
                <svg xmlns="http://www.w3.org/2000/svg" class="ml-auto size-5 shrink-0 text-gray-400 transition-transform group-open:rotate-90" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </summary>
              <ul class="mt-1 px-2">
                {repositories.topics.map((topic) => (
                  <li>
                    <div class="menu-item cursor-pointer" data-description={topic.description}>
                      <div class="menu-trigger flex items-center justify-between rounded-md py-2 pl-9 pr-2 text-sm/6 text-gray-700 hover:bg-gray-50">
                        <span>{topic.name}</span>
                        <div class="flex gap-2">
                          {topic?.url && (
                            <a 
                              href={topic.url}
                              target="_blank"
                              class="goto-icon hidden"
                              aria-label={`Open ${topic.name} in new tab`}
                              onClick={(e) => e.stopPropagation()}
                            >
                              <svg 
                                xmlns="http://www.w3.org/2000/svg" 
                                class="size-4 text-gray-500 hover:text-gray-700" 
                                fill="none" 
                                viewBox="0 0 24 24" 
                                stroke="currentColor"
                              >
                                <path 
                                  stroke-linecap="round" 
                                  stroke-linejoin="round" 
                                  stroke-width="2" 
                                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" 
                                />
                              </svg>
                            </a>
                          )}

                          {topic?.github && (
                            <a 
                              href={topic.github}
                              target="_blank"
                              class="goto-icon hidden"
                              aria-label={`Open ${topic.name} GitHub in new tab`}
                              onClick={(e) => e.stopPropagation()}
                            >
                              <svg 
                                xmlns="http://www.w3.org/2000/svg" 
                                viewBox="0 0 24 24"
                                class="size-4 text-gray-500 hover:text-gray-700" 
                                fill="currentColor"
                              >
                                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                              </svg>
                            </a>
                          )}
                        </div>
                      </div>
                      <div class="description hidden mt-2 pl-9 pr-2 text-sm text-gray-500 italic"></div>
                    </div>
                  </li>
                ))}
              </ul>
            </details>
          </li>
          
          <li>
            <details class="group">
              <summary class="flex w-full items-center gap-x-3 rounded-md p-2 text-left text-sm/6 font-semibold text-gray-700 hover:bg-gray-50 cursor-pointer">
                <svg xmlns="http://www.w3.org/2000/svg" class="size-6 shrink-0 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                </svg>
                Tools
                <svg xmlns="http://www.w3.org/2000/svg" class="ml-auto size-5 shrink-0 text-gray-400 transition-transform group-open:rotate-90" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </summary>
              <ul class="mt-1 px-2">
                {repositories.tools.map((tool) => (
                  <li>
                    <div class="menu-item cursor-pointer" data-description={tool.description}>
                      <div class="menu-trigger flex items-center justify-between rounded-md py-2 pl-9 pr-2 text-sm/6 text-gray-700 hover:bg-gray-50">
                        <span>{tool.name}</span>
                        <a 
                          href={tool.url}
                          target="_blank"
                          class="goto-icon hidden ml-2"
                          aria-label={`Open ${tool.name} in new tab`}
                          onClick={(e) => e.stopPropagation()}
                        >
                          <svg 
                            xmlns="http://www.w3.org/2000/svg" 
                            class="size-4 text-gray-500 hover:text-gray-700" 
                            fill="none" 
                            viewBox="0 0 24 24" 
                            stroke="currentColor"
                          >
                            <path 
                              stroke-linecap="round" 
                              stroke-linejoin="round" 
                              stroke-width="2" 
                              d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" 
                            />
                          </svg>
                        </a>
                      </div>
                      <div class="description hidden mt-2 pl-9 pr-2 text-sm text-gray-500 italic"></div>
                    </div>
                  </li>
                ))}
              </ul>
            </details>
          </li>

          <li>
            <details class="group">
              <summary class="flex w-full items-center gap-x-3 rounded-md p-2 text-left text-sm/6 font-semibold text-gray-700 hover:bg-gray-50 cursor-pointer">
                <svg xmlns="http://www.w3.org/2000/svg" class="size-6 shrink-0 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                Languages
                <svg xmlns="http://www.w3.org/2000/svg" class="ml-auto size-5 shrink-0 text-gray-400 transition-transform group-open:rotate-90" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </summary>
              <ul class="mt-1 px-2">
                {repositories.languages.map((language) => (
                  <li>
                    <div class="menu-item cursor-pointer" data-description={language.description}>
                      <div class="menu-trigger flex items-center justify-between rounded-md py-2 pl-9 pr-2 text-sm/6 text-gray-700 hover:bg-gray-50">
                        <span>{language.name}</span>
                        <a 
                          href={language.url}
                          target="_blank"
                          class="goto-icon hidden ml-2"
                          aria-label={`Open ${language.name} in new tab`}
                          onClick={(e) => e.stopPropagation()}
                        >
                          <svg 
                            xmlns="http://www.w3.org/2000/svg" 
                            class="size-4 text-gray-500 hover:text-gray-700" 
                            fill="none" 
                            viewBox="0 0 24 24" 
                            stroke="currentColor"
                          >
                            <path 
                              stroke-linecap="round" 
                              stroke-linejoin="round" 
                              stroke-width="2" 
                              d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" 
                            />
                          </svg>
                        </a>
                      </div>
                      <div class="description hidden mt-2 pl-9 pr-2 text-sm text-gray-500 italic"></div>
                    </div>
                  </li>
                ))}
              </ul>
            </details>
          </li>
        </ul>
      </li>
    </ul>
  </nav>
</div>

<script>
  const menuItems = document.querySelectorAll('.menu-item');
  
  menuItems.forEach(item => {
    const gotoIcons = item.querySelectorAll('.goto-icon');
    const description = item.querySelector('.description');
    let isOpen = false;

    const toggleDescription = (e: Event) => {
      e.stopPropagation();
      
      if (!isOpen) {
        const desc = item.getAttribute('data-description');
        if (description && desc) {
          description.textContent = desc;
          description.classList.remove('hidden');
          gotoIcons.forEach(icon => icon.classList.remove('hidden'));
        }
      } else {
        description?.classList.add('hidden');
        gotoIcons.forEach(icon => icon.classList.add('hidden'));
      }
      isOpen = !isOpen;
    };

    item.addEventListener('click', toggleDescription);
  });
</script>

<style>
  .description {
    transition: all 0.3s ease;
  }
  
  .goto-icon {
    transition: opacity 0.3s ease;
  }

  .menu-item {
    user-select: none;
  }
</style> 